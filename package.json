{
  "name": "personal-portfolio-html-css",
  "version": "0.0.0",
  "private": true,
  "description": "Personal Portfolio HTML+ CSS",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.17.0"
  },
  "cacheDirectories": [
    "node_modules"
  ],
  "scripts": {
    "prepare": "husky install",
    "prettier:check": "prettier --check \"{,src/**/}*.{md,json,yml,html,js,ts,tsx,css,scss,vue,java,xml}\"",
    "prettier:format": "prettier --write \"{,src/**/}*.{md,json,yml,html,js,ts,tsx,css,scss,vue,java,xml}\"",
    "build:css": "NODE_ENV=development npx postcss src/assets/css/tailwind.css -o src/assets/css/style.css",
    "build:css:watch": "NODE_ENV=development npx postcss src/assets/css/tailwind.css -o src/assets/css/style.css --watch",
    "build:css:prod": "NODE_ENV=production npx postcss src/assets/css/tailwind.css -o src/assets/css/style.css",
    "build:css:prod:watch": "NODE_ENV=production npx postcss src/assets/css/tailwind.css -o src/assets/css/style.css --watch"
  },
  "devDependencies": {
    "@prettier/plugin-xml": "3.1.1",
    "animated-tailwindcss": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "cssnano": "^6.0.1",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "postcss": "^8.4.28",
    "postcss-cli": "^10.1.0",
    "prettier": "3.0.0",
    "prettier-plugin-java": "2.2.0",
    "prettier-plugin-packagejson": "2.4.5",
    "tailwindcss": "^3.3.3"
  }
}
